{{#section 'head'}}
	<link rel='stylesheet' type='text/css' href='styles/chat.css'>
	<script src='/behaviour/users.js'></script>
{{/section}}
<div class='wrapper'>
	{{> adminmenubar}}
	<div class='chatContainer'>
		<div class='chatHeader'>
			<h3>Users</h3>
		</div>
		<div class='chatMessages' id='messageContainer'>
			{{#each users}}
				<div class="messages">
					{{username}} ----- {{role}}
					<input type='submit' name={{_id}} class='postStatus' value={{status}}>
					<input type='submit' name={{_id}} class='deleteUser' value='Delete'/>
				</div>
			{{/each}}

		</div>
	</div>
</div>